{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "eslint.workingDirectories": ["./frontend"],
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.analysis.indexing": true,
  "python.analysis.extraPaths": ["${workspaceFolder}/backend"],
  "python.autoComplete.extraPaths": ["${workspaceFolder}/backend/.venv/", "${workspaceFolder}/backend"],
  "python.analysis.include": ["${workspaceFolder}/backend"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 10,
      "includeAllSymbols": true
    }
  ],
  "sonarlint.connectedMode.project": {
    "connectionId": "VScode",
    "projectKey": "HomeLabHQ_loyalist"
  },
  "ruff.args": ["--line-length", "120", "--config=${workspaceFolder}/backend/pyproject.toml"],
  "python.testing.unittestArgs": ["authentication","core","cards","stores"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "python.analysis.typeCheckingMode": "off"
}
